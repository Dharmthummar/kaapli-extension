{
    "manifest_version": 3,
    "name": "Kaapli - AI Study Helper",
    "version": "1.2",
    "description": "An educational assistant that uses Gemini AI to explain quiz questions and concepts from text or images.",
    "permissions": [
        "activeTab",
        "clipboardRead",
        "clipboardWrite",
        "storage"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icon.png",
            "48": "icon.png",
            "128": "icon.png"
        }
    },
    "icons": {
        "16": "icon.png",
        "32": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
    },
    "host_permissions": [
        "https://generativelanguage.googleapis.com/*"
    ],
    "commands": {
        "_execute_action": {
            "suggested_key": {
                "default": "Alt+Z"
            }
        }
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content.js"]
        }
    ]
}